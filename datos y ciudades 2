package CCP.bin;

import java.io.*;

public class CCP_bin {

    public static void main(String[] args) {
        try {
            // Leer el fichero binario
            DataInputStream dis = new DataInputStream(new FileInputStream("C:\\Dennis\\programacion\\UF3\\src3\\CCP"));

            // Leer la explicaci贸n del fichero
            String explicacion = dis.readUTF();

            // Procesar el resto de los datos
            while (dis.available() > 0) {
                // Leer y procesar los datos de las ciudades y enfermedades
                String ciudad = dis.readUTF();
                String enfermedad = obtenerEnfermedadPrincipal(ciudad); // Implementa esta funci贸n

                // Guardar en el fichero ciudades-enfermedad.bin
                DataOutputStream dos = new DataOutputStream(new FileOutputStream("ciudades-enfermedad.bin", true));
                dos.writeUTF(ciudad + ": " + enfermedad);
                dos.close();
            }

            dis.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private static String obtenerEnfermedadPrincipal(String ciudad) {
        // Implementa la l贸gica para asociar la ciudad con su enfermedad principal
        // Puedes utilizar la informaci贸n proporcionada en el fichero binario
        return "EnfermedadPrincipal";
    }
}

		            
